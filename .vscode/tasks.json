{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build & Test",
      "command": "${command:test-explorer.run-all}",
      "group": "test",
      "presentation": {
        "reveal": "silent"
      },
      "dependsOrder": "sequence",
      "dependsOn": [
        "dotnet build"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "dotnet build",
      "command": "dotnet",
      "args": [
        "build",
        "/p:GenerateFullPaths=true",
        "/p:Configuration=Debug",
        "/p:Platform=x64",
        "/p:Include=\"[TournamentsEnhanced[Test]?.dll]*\"",
        "/p:Exclude=\"[*]TournamentsEnhanced.Wrappers.*\"",
        "/p:SkipAutoProps=true",
        "/p:CollectCoverage=true",
        "/p:CoverletOutputFormat=lcov",
        "/p:CoverletOutput=../lcov.info",
        "/consoleloggerparameters:NoSummary",
        "${workspaceFolder}/test/TournamentsEnhancedTests.csproj"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "dependsOrder": "sequence",
      "dependsOn": [
        "Delete Empty Folders",
        "Create Test Folders"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Build & Deploy",
      "command": "dotnet",
      "args": [
        "build",
        "--no-incremental",
        "/p:GenerateFullPaths=true",
        "/p:Configuration=DebugOutputToBannerlord",
        "/p:Platform=x64",
        "${workspaceFolder}/TournamentsEnhanced.csproj"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Create Release From Deployed Build",
      "type": "shell",
      "command": "./sh/tag-and-zip-for-release.sh",
      "args": [
        "${input:tag}",
        "${env:PATH_TO_BANNERLORD}"
      ],
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Create Test Folders",
      "type": "shell",
      "command": "./sh/create-test-folders.sh",
      "args": [
        "src"
      ],
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Cache Bannerlord DLLs",
      "type": "shell",
      "command": "./sh/cache-bannerlord-lib.sh",
      "problemMatcher": []
    },
    {
      "label": "Delete Empty Folders",
      "type": "shell",
      "command": "./sh/delete-empty-folders.sh",
      "args": [
        "src",
      ],
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
  ],
  "inputs": [
    {
      "id": "tag",
      "description": "tag name",
      "default": "1.5.",
      "type": "promptString"
    },
  ]
}