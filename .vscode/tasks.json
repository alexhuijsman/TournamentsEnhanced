{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build & Deploy",
      "command": "dotnet",
      "args": [
        "build",
        "--no-incremental",
        "/p:GenerateFullPaths=true",
        "/p:Configuration=DebugOutputToBannerlord",
        "/p:Platform=x64",
        "/consoleloggerparameters:NoSummary",
        "${workspaceFolder}/TournamentsEnhanced.csproj"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Create Release From Deployed Build",
      "type": "shell",
      "command": "./sh/tag-and-zip-for-release.sh",
      "args": [
        "${input:tag}",
        "${env:PATH_TO_BANNERLORD}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Cache Bannerlord DLLs",
      "type": "shell",
      "command": "./sh/cache-bannerlord-lib.sh",
      "problemMatcher": []
    },
    {
      "label": "Delete Empty Folders",
      "type": "shell",
      "command": "./sh/delete-empty-folders.sh",
      "args": [
        "src",
      ],
      "problemMatcher": []
    },
  ],
  "inputs": [
    {
      "id": "tag",
      "description": "tag name",
      "default": "1.5.",
      "type": "promptString"
    },
    {
      "id": "bannerlordVersion",
      "description": "bannerlord lib version",
      "default": "e1.5.7",
      "type": "promptString"
    },
  ]
}